<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="80dp "
              android:background="@drawable/gray_border_wo_padding"
              android:gravity="center_vertical"
              android:orientation="vertical"
              android:paddingLeft="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <FrameLayout
            android:id="@+id/audio_controller_play_pause_layout"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/audio_controller_play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:tint="@color/colorAccent"
                android:src="@android:drawable/ic_media_play"/>

            <ImageView
                android:id="@+id/audio_controller_pause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:src="@android:drawable/ic_media_pause"
                android:tint="@color/colorAccent"
                android:visibility="gone"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/audio_controller_seekbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/audio_controller_play_pause_layout"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp">

            <SeekBar
                android:id="@+id/audio_controller_media_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:thumbTint="@color/colorAccent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/audio_controller_run_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:inputType="text"
                    android:text="00:00"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:inputType="text"
                    android:text=" / "
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/audio_controller_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:inputType="text"
                    android:text="00:00"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp"/>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>