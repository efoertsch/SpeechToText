<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/margin_standard"
    android:paddingLeft="@dimen/list_single_line_side_margin"
    android:paddingRight="@dimen/list_single_line_side_margin"
    android:paddingTop="@dimen/margin_standard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/audio_record_play_image"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/audio_record_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            tools:text="Patient xyz"/>

        <TextView
            android:id="@+id/audio_record_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/list_single_line_side_margin"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            tools:text="2017-06-10:09:10:11"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/audio_record_play_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_play_circle_outline"
        android:backgroundTint="@android:color/transparent"/>
</RelativeLayout>