<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/margin_standard"
    android:paddingRight="@dimen/list_single_line_side_margin"
    android:paddingLeft="@dimen/list_single_line_side_margin"
    android:paddingTop="@dimen/margin_standard">


    <LinearLayout
        android:id="@+id/audio_record_description_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/audio_record_status_play"
        android:orientation="vertical">

        <TextView
            android:id="@+id/audio_record_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            tools:text="Patient xyz"/>

        <TextView
            android:id="@+id/audio_record_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/list_single_line_side_margin"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            tools:text="2017-06-10:09:10:11"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/audio_record_status_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/margin_standard"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/audio_record_speech_to_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/speech_to_text"/>

        <ImageButton
            android:id="@+id/audio_record_play_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_play_circle_outline"/>

    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_standard"/>

</RelativeLayout>